{
  "entrypoint": "index.html",
  "shell": "src/shell.html",
  "fragments": [
    "src/balances.html",
    "src/preferences.html",
    "src/not-found.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled",
      "basePath": "/crypto-balance/"
    },
    {
      "preset": "es6-bundled",
      "basePath": "/crypto-balance/"
    },
    {
      "preset": "es6-unbundled",
      "basePath": "/crypto-balance/"
    }
  ]
}
